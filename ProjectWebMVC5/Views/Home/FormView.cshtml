@model ProjectWebMVC5.Models.ProductFormViewModel
@{
    ViewBag.Title = "FormView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Detail</h2>
<h4>Product</h4>
<hr />
@using (Html.BeginForm("Save", "Home", FormMethod.Post, new { @id = "products" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Product.Name)
        @Html.TextBoxFor(x => x.Product.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Product.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Product.Description)
        @Html.TextBoxFor(x => x.Product.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Product.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Product.NumberInStock)
        @Html.TextBoxFor(x => x.Product.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Product.NumberInStock)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Category.CategoryName)
        @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Category.CategoryName)
    </div>
    @Html.HiddenFor(x=>x.Product.ID)
    @Html.HiddenFor(x=>x.Category.ID)
    <button type="submit" class="btn btn-default " style="margin: 0">Save</button>
    <a href="/Home/Index" style="display: block; margin-top: 10px;">Back to list</a>

}

